{
  "compilerOptions": {
     "target": "es6",
     "module": "commonjs",
     "sourceMap": true,
     "outDir": "./build",
     "rootDir": "./",
     "removeComments": true,
     "strict": true,
     "noImplicitAny": true,
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "useUnknownInCatchVariables": false,
     "resolveJsonModule": true  // para permitir o import dos json no migration
  }
}